CC          = @CC@
CFLAGS      = @CFLAGS@ -I. 
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@  
DEFS        = @DEFS@ # -DEADBUG
INSTALL     = @INSTALL@

prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir      = @bindir@
mandir      = @mandir@
datadir     = @datadir@
srcdir      = @srcdir@
shtool      = @SHTOOL@

OBJS    = aping.o sender.o receiver.o statistic.o fnv.o iface.o datalink.o \
	resolver.c \
	argscheck.o \
	keystroke.o  \
	hardware.o \
	plugin.o \
	chksum.o usage.o \
	dissect-destination.o \
	dissect-echo-reply.o \
	dissect-echo.o \
	dissect-information-reply.o \
	dissect-information.o \
	dissect-mask-reply.o \
	dissect-mask.o \
	dissect-parameter-problem.o \
	dissect-redirect.o \
	dissect-router-advertisement.o \
	dissect-router-solicitation.o \
	dissect-source-quench.o \
	dissect-time-exceeded.o \
	dissect-timestamp-reply.o \
	dissect-timestamp.o \
	dissect-security.o \
	@LIBOBJS@

.c.o:
	$(CC) $(CFLAGS) $(DEFS) $(DEBUG) -c $< -o $@

all:  global 
	$(CC) -o aping $(OBJS) $(LIBS) 	
	@cd plugin && make

global: version.h $(OBJS)

version.o: version.h

version.h: VERSION
	@rm -f $@
	@sed -e 's/.*/#define VERSION "&"/' VERSION > $@
	@echo "#define PLUGIN_PATH  \"@datadir@/aping\"" >> $@  
	@echo "====================="
	@echo "     making aping"
	@echo "====================="
install:
	$(shtool)  mkdir -f $(datadir)/aping
	$(INSTALL) -c -m 0755 -g bin aping @bindir@ 
	cd plugin && make install
clean:
	rm -Rf *~ *.bak *.o aping  
	cd plugin && make clean
distclean:
	rm -Rf *~ *.bak *.o *.cache *.log aping config.status config.h version.h Makefile
	cd plugin && make distclean
